<style>
  .footer {
    background-color: #2A3335;
    color: #e2e8f0;
    padding-top: 5rem;
    font-size: 0.95rem;
  }

  .footer-layout {
    display: grid;
    grid-template-columns: minmax(auto, 300px) 1fr;
    gap: 5rem;
    margin-bottom: 3rem;
  }

  .footer-brand-col {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .footer-desc {
    font-size: 1rem;
    line-height: 1.6;
    color: #cbd5e1;
    max-width: 350px;
    margin: 0;
  }

  .highlight {
    color: #0A97B0;
  }

  .footer-contact-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: #e2e8f0;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .contact-item:hover {
    color: #0A97B0;
    transform: translateX(5px);
  }

  .contact-item svg {
    color: #0A97B0;
    width: 20px;
    height: 20px;
  }

  .footer-links-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .footer-col h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: white;
    margin-bottom: 1.5rem;
  }

  .footer-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-col a {
    color: #cbd5e1;
    text-decoration: none;
    transition: color 0.2s ease;
    display: inline-block;
  }

  .footer-col a:hover {
    color: #0A97B0;
  }

  /* Map Section */
  .footer-map-section {
    padding: 0 0 2rem 0;
  }

  .footer-map-section .map-container {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.2);
  }

  .footer-map-section iframe {
    display: block;
    filter: grayscale(20%);
    transition: filter 0.3s ease;
  }

  .footer-map-section .map-container:hover iframe {
    filter: grayscale(0%);
  }

  /* Footer Bottom */
  .footer-bottom {
    border-top: 1px solid rgba(255,255,255,0.1);
    padding: 2rem 0;
    margin-top: 2rem;
  }

  .footer-bottom-content {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 1.5rem;
  }

  .copyright {
    color: #94a3b8;
    font-size: 0.9rem;
    margin: 0;
    text-align: left;
  }

  .footer-bottom-links {
    display: flex;
    gap: 2rem;
    justify-self: center;
  }

  .footer-bottom-links a {
    color: #94a3b8;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .footer-bottom-links a:hover {
    color: white;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    justify-self: end;
  }

  .social-links a {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #cbd5e1;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    color: #0A97B0;
    transform: translateY(-2px);
  }

  @media (max-width: 968px) {
    .footer-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-links-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .footer-links-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem 1.5rem;
    }

    .footer-bottom-content {
      display: flex;
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .footer-bottom-links {
      justify-self: unset;
      justify-content: center;
    }

    .social-links {
      justify-self: unset;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
