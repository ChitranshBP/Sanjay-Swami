<script>
  const menuToggle = document.getElementById('menuToggle');
  const mobileNav = document.getElementById('mobileNav');
  const header = document.getElementById('mainHeader');

  // Mobile menu toggle
  if (menuToggle && mobileNav) {
    menuToggle.addEventListener('click', () => {
      menuToggle.classList.toggle('active');
      mobileNav.classList.toggle('active');
    });
  }

  // Mobile dropdown toggles (Services, Resources, etc.)
  const mobileDropdownToggles = document.querySelectorAll('.mobile-dropdown-toggle');

  mobileDropdownToggles.forEach((toggle) => {
    const group = toggle.closest('.mobile-services-group');
    if (!group) return;
    const linksContainer = group.querySelector('.mobile-services-links');
    if (toggle && linksContainer) {
      toggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        toggle.classList.toggle('active');
        linksContainer.classList.toggle('active');
      });
    }
  });

  // Scroll effect for header
  if (header) {
    const handleScroll = () => {
      if (window.scrollY > 50) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    };

    // Initial check
    handleScroll();

    // Add scroll listener
    window.addEventListener('scroll', handleScroll);
  }
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: white;
    transition: all 0.3s ease;
  }

  .header-accent {
    height: 3px;
    background: linear-gradient(to right, #0A5EB0, #0A97B0);
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 72px;
    padding: 0 2rem;
    max-width: 1280px;
    margin: 0 auto;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    min-width: 240px;
    position: relative;
    height: 72px;
  }

  .logo-img {
    height: auto;
    width: 220px;
    max-height: 72px;
    transition: opacity 0.3s ease;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 0;
  }

  .logo-white {
    opacity: 0;
  }

  .logo-color {
    opacity: 1;
  }

  .nav-desktop {
    display: none;
    align-items: center;
    gap: 0.25rem;
  }

  /* Nav link styles */
  .nav-desktop a:not(.btn-nav):not(.nav-phone) {
    color: #374151;
    font-weight: 500;
    font-size: 0.9rem;
    text-decoration: none;
    position: relative;
    padding: 0.5rem 0.85rem;
    transition: all 0.2s ease;
    border-radius: 6px;
  }

  .nav-desktop a:not(.btn-nav):not(.nav-phone):hover {
    color: #0A5EB0;
    background: #f0f7ff;
  }

  /* Remove underline pseudo-element */
  .nav-desktop a:not(.btn-nav):not(.nav-phone)::after {
    display: none;
  }

  /* Dropdown Styles */
  .dropdown-container {
    position: relative;
    padding: 0.5rem 0;
  }

  .dropdown-container > a {
    display: flex;
    align-items: center;
  }

  .dropdown-icon {
    margin-left: 4px;
    transition: transform 0.3s ease;
  }

  .dropdown-container:hover .dropdown-icon {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    background: white;
    min-width: 300px;
    box-shadow: 0 12px 40px rgba(0,0,0,0.1), 0 0 0 1px rgba(0,0,0,0.04);
    border-radius: 12px;
    padding: 0.5rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1100;
  }

  .dropdown-menu::before {
    content: '';
    position: absolute;
    top: -6px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 12px;
    height: 12px;
    background: white;
    box-shadow: -1px -1px 0 rgba(0,0,0,0.04);
  }

  .dropdown-container:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .nav-desktop .dropdown-menu a.dropdown-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.625rem 0.75rem;
    color: #374151;
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.2s ease;
    border-bottom: none;
    white-space: nowrap;
    border-radius: 8px;
    background: transparent;
  }

  .nav-desktop .dropdown-menu a.dropdown-item:hover {
    background-color: #f0f7ff;
    color: #0A5EB0;
  }

  .dropdown-item-icon {
    width: 36px;
    height: 36px;
    background: #f0f7ff;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #0A5EB0;
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .dropdown-item:hover .dropdown-item-icon {
    background: #0A97B0;
    color: white;
  }

  .dropdown-item-text {
    display: flex;
    flex-direction: column;
    gap: 1px;
  }

  .dropdown-item-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1a1a2e;
    line-height: 1.3;
  }

  .dropdown-item-desc {
    font-size: 0.72rem;
    color: #94a3b8;
    font-weight: 400;
    line-height: 1.3;
  }

  .dropdown-item:hover .dropdown-item-title {
    color: #0A5EB0;
  }

  /* Ensure dropdown links don't inherit nav link styles */
  .nav-desktop .dropdown-menu a::after,
  .nav-desktop .dropdown-menu a.dropdown-item::after {
    display: none !important;
  }

  /* Nav actions (phone + CTA) */
  .nav-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-left: 0.75rem;
    padding-left: 1rem;
    border-left: 1px solid #e5e7eb;
  }

  .nav-phone {
    width: 38px;
    height: 38px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: #f0f7ff;
    color: #0A5EB0 !important;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .nav-phone:hover {
    background: #0A97B0;
    color: white !important;
    transform: scale(1.05);
  }

  .nav-phone::after {
    display: none !important;
  }

  .btn-nav {
    background: linear-gradient(135deg, #0A97B0, #0A5EB0);
    color: white !important;
    padding: 0.6rem 1.4rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.85rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(10, 94, 176, 0.25);
  }

  .btn-nav:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 16px rgba(10, 94, 176, 0.35);
    filter: brightness(1.05);
  }

  .btn-nav::after {
    display: none !important;
  }

  /* Mobile Menu Toggle */
  .mobile-menu-toggle {
    display: flex;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
    z-index: 1001;
  }

  .bar {
    width: 22px;
    height: 2px;
    background-color: #374151;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .mobile-menu-toggle.active .bar:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active .bar:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active .bar:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
