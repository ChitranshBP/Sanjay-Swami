<header class="header" id="mainHeader">
  <div class="container header-container">
    <a href="/" class="logo">
      <span class="logo-name">Dr. Sanjay Swamy</span>
      <span class="logo-sub">Chief Paediatric Intensivist</span>
    </a>

    <nav class="nav-desktop">
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/services">Services</a>
      <a href="/blog">Blog</a>
      <a href="/contact">Contact</a>
      <a href="/appointment" class="btn-nav">Book Appointment</a>
    </nav>

    <button class="mobile-menu-toggle" aria-label="Toggle Menu" id="menuToggle">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
  </div>

  <nav class="nav-mobile" id="mobileNav">
    <a href="/">Home</a>
    <a href="/about">About</a>
    <a href="/services">Services</a>
    <a href="/blog">Blog</a>
    <a href="/contact">Contact</a>
    <a href="/appointment" class="btn btn-primary">Book Appointment</a>
  </nav>
</header>

<script>
  const menuToggle = document.getElementById('menuToggle');
  const mobileNav = document.getElementById('mobileNav');
  const header = document.getElementById('mainHeader');

  // Mobile menu toggle
  if (menuToggle && mobileNav) {
    menuToggle.addEventListener('click', () => {
      menuToggle.classList.toggle('active');
      mobileNav.classList.toggle('active');
    });
  }

  // Scroll effect for header
  if (header) {
    const handleScroll = () => {
      if (window.scrollY > 50) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    };

    // Initial check
    handleScroll();

    // Add scroll listener
    window.addEventListener('scroll', handleScroll);
  }
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: transparent;
    transition: all 0.3s ease;
  }

  .header.scrolled {
    background-color: white;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
    padding: 0 2rem;
  }

  .logo {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
    text-decoration: none;
  }

  .logo-name {
    font-size: 1.35rem;
    font-weight: 700;
    color: white;
    transition: color 0.3s ease;
  }

  .logo-sub {
    font-size: 0.75rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }

  .header.scrolled .logo-name {
    color: #0A5EB0;
  }

  .header.scrolled .logo-sub {
    color: #6b7280;
  }

  .nav-desktop {
    display: none;
    align-items: center;
    gap: 2.5rem;
  }

  .nav-desktop a:not(.btn-nav) {
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
    font-size: 0.95rem;
    text-decoration: none;
    position: relative;
    padding: 0.5rem 0;
    transition: color 0.3s ease;
  }

  .nav-desktop a:not(.btn-nav)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: #0A97B0;
    transition: width 0.3s ease;
  }

  .nav-desktop a:not(.btn-nav):hover::after {
    width: 100%;
  }

  .header.scrolled .nav-desktop a:not(.btn-nav) {
    color: #1a1a2e;
  }

  .header.scrolled .nav-desktop a:not(.btn-nav):hover {
    color: #0A5EB0;
  }

  .btn-nav {
    background: #0A97B0;
    color: white !important;
    padding: 0.65rem 1.5rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 10px rgba(10, 151, 176, 0.3);
  }

  .btn-nav:hover {
    background: #0A5EB0;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(10, 94, 176, 0.4);
  }

  .btn-nav::after {
    display: none !important;
  }

  /* Mobile Menu Toggle */
  .mobile-menu-toggle {
    display: flex;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
    z-index: 1001;
  }

  .bar {
    width: 24px;
    height: 2px;
    background-color: white;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .header.scrolled .bar {
    background-color: #1a1a2e;
  }

  .mobile-menu-toggle.active .bar:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active .bar:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active .bar:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Mobile Navigation */
  .nav-mobile {
    position: fixed;
    top: 80px;
    left: 0;
    right: 0;
    background: white;
    padding: 1.5rem 2rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 0;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    transform: translateY(-150%);
    opacity: 0;
    transition: all 0.3s ease;
    z-index: 999;
  }

  .nav-mobile.active {
    transform: translateY(0);
    opacity: 1;
  }

  .nav-mobile a {
    color: #1a1a2e;
    font-weight: 500;
    font-size: 1rem;
    text-decoration: none;
    padding: 1rem 0;
    border-bottom: 1px solid #f0f0f0;
    transition: color 0.3s ease;
  }

  .nav-mobile a:last-child {
    border-bottom: none;
    margin-top: 1rem;
  }

  .nav-mobile a:hover {
    color: #0A5EB0;
  }

  .nav-mobile .btn {
    text-align: center;
    border-bottom: none;
  }

  @media (min-width: 768px) {
    .nav-desktop {
      display: flex;
    }
    .mobile-menu-toggle {
      display: none;
    }
    .nav-mobile {
      display: none;
    }
  }

  @media (max-width: 767px) {
    .header-container {
      padding: 0 1rem;
    }

    .logo-name {
      font-size: 1.15rem;
    }

    .logo-sub {
      font-size: 0.65rem;
    }
  }
</style>
