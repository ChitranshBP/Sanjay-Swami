<form class="appointment-form" action="/success" method="POST" data-netlify="true" name="appointment">
  <div class="form-group">
    <label for="name">Parent's Name *</label>
    <input type="text" id="name" name="name" required placeholder="Enter your full name">
  </div>

  <div class="form-group">
    <label for="phone">Phone Number *</label>
    <input type="tel" id="phone" name="phone" required placeholder="10-digit mobile number">
  </div>

  <div class="form-group">
    <label for="child-name">Child's Name</label>
    <input type="text" id="child-name" name="child-name" placeholder="Enter child's name">
  </div>

  <div class="form-group">
    <label for="age">Child's Age</label>
    <input type="text" id="age" name="age" placeholder="e.g. 2 years">
  </div>

  <div class="form-group">
    <label for="service">Service Required</label>
    <select id="service" name="service">
      <option value="General Consultation">General Consultation</option>
      <option value="Vaccination">Vaccination</option>
      <option value="Growth Checkup">Growth Checkup</option>
      <option value="Other">Other</option>
    </select>
  </div>

  <div class="form-group">
    <label for="message">Message / Symptoms</label>
    <textarea id="message" name="message" rows="4" placeholder="Briefly describe the issue..."></textarea>
  </div>

  <button type="submit" class="btn btn-primary btn-block">Request Appointment</button>
  <p class="form-note">We will confirm your appointment via phone/WhatsApp.</p>
</form>

<style>
  .appointment-form {
    background: white;
    padding: 2rem;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--color-text);
  }

  input, select, textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: var(--radius-sm);
    font-family: inherit;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  input:focus, select:focus, textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px var(--color-accent);
  }

  .btn-block {
    width: 100%;
    margin-top: 1rem;
  }

  .form-note {
    text-align: center;
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin-top: 1rem;
  }
</style>
