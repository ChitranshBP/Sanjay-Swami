---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';

const resources = [
  { title: "New Patient Registration Form", type: "PDF", size: "150 KB" },
  { title: "Vaccination Schedule Chart", type: "PDF", size: "1.2 MB" },
  { title: "Diet Chart for Toddlers", type: "PDF", size: "500 KB" },
  { title: "Fever Management Guidelines", type: "PDF", size: "300 KB" },
];
---

<Layout 
  title="Patient Resources" 
  description="Downloadable forms and educational resources for parents."
>
  <div class="page-header">
    <div class="container">
      <h1>Patient Resources</h1>
      <p>Helpful information and forms for your visit.</p>
    </div>
  </div>

  <section class="section">
    <div class="container">
      <div class="resources-list">
        {resources.map(res => (
          <div class="resource-item">
            <div class="icon">ðŸ“„</div>
            <div class="details">
              <h3>{res.title}</h3>
              <span class="meta">{res.type} â€¢ {res.size}</span>
            </div>
            <button class="btn btn-outline btn-sm">Download</button>
          </div>
        ))}
      </div>
    </div>
  </section>

  <div class="container">
    <CTA />
  </div>

</Layout>

<style>
  .page-header { background-color: var(--color-primary-dark); color: white; padding: 3rem 0; text-align: center; }
  .resources-list { max-width: 800px; margin: 0 auto; display: grid; gap: 1.5rem; }
  .resource-item { display: flex; align-items: center; background: white; padding: 1.5rem; border-radius: var(--radius-sm); box-shadow: var(--shadow-sm); gap: 1.5rem; }
  .icon { font-size: 2rem; }
  .details { flex-grow: 1; }
  .details h3 { margin-bottom: 0.25rem; font-size: 1.1rem; }
  .meta { font-size: 0.875rem; color: var(--color-text-light); }
  .btn-sm { padding: 0.5rem 1rem; }
</style>
