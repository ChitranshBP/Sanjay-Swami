---
import Layout from '../../layouts/Layout.astro';
import heroBgImage from '../../assets/backgrounds/background-sanjay.jpeg';
import emergencyImg from '../../assets/services/emergency-care.png';
import award2 from '../../assets/awards/sanjay-award-2.jpeg';
import AppointmentForm from '../../components/AppointmentForm.astro';

import acuteIllnessImg from '../../assets/services/acute-illness.png';
import picuImg from '../../assets/services/picu.png';
import nicuMonitoringImg from '../../assets/services/nicu-monitoring.png';
import chronicDiseaseImg from '../../assets/services/chronic-disease.png';
import nicuRespiratoryImg from '../../assets/services/nicu-respiratory-support.png';

const services = [
  {
    image: emergencyImg.src,
    title: "24/7 Emergency Services",
    description: "Round-the-clock pediatric emergency care with immediate triage and treatment for all childhood emergencies requiring urgent attention."
  },
  {
    image: acuteIllnessImg.src,
    title: "Acute Illness Management",
    description: "Rapid assessment and treatment of sudden onset illnesses including high fever, severe infections, and respiratory distress in children."
  },
  {
    image: picuImg.src,
    title: "Trauma & Injury Care",
    description: "Expert management of pediatric trauma including fractures, head injuries, burns, and accidental injuries with child-friendly approach."
  },
  {
    image: nicuMonitoringImg.src,
    title: "Poison Control",
    description: "Immediate response to accidental poisoning and toxic ingestions with specialized pediatric toxicology protocols and rapid intervention."
  },
  {
    image: chronicDiseaseImg.src,
    title: "Allergic Emergencies",
    description: "Rapid treatment of severe allergic reactions, anaphylaxis, and acute asthma attacks with advanced life support capabilities."
  },
  {
    image: nicuRespiratoryImg.src,
    title: "Seizure Management",
    description: "Emergency care for convulsions and seizures with immediate stabilization, continuous monitoring, and comprehensive neurological assessment."
  }
];

const capabilities = [
  {
    title: "Rapid Response Team",
    description: "Dedicated pediatric emergency team trained in advanced life support available 24/7 for immediate intervention.",
    color: "#0A5EB0"
  },
  {
    title: "Advanced Diagnostics",
    description: "On-site X-ray, ultrasound, and CT scan facilities for quick and accurate diagnosis in emergency situations.",
    color: "#0A97B0"
  },
  {
    title: "Pediatric Resuscitation",
    description: "Fully equipped resuscitation bay with age-appropriate equipment and medications for pediatric emergencies.",
    color: "#0A5EB0"
  },
  {
    title: "Short Stay Unit",
    description: "Observation unit for children requiring monitoring after emergency treatment before safe discharge home.",
    color: "#0A97B0"
  }
];

const conditions = [
  "High Fever & Febrile Seizures",
  "Severe Respiratory Distress",
  "Acute Asthma Attacks",
  "Severe Allergic Reactions",
  "Head Injuries",
  "Fractures & Dislocations",
  "Burns & Scalds",
  "Accidental Poisoning",
  "Severe Dehydration",
  "Drowning Incidents",
  "Foreign Body Ingestion",
  "Severe Abdominal Pain",
  "Convulsions & Seizures",
  "Diabetic Emergencies",
  "Animal Bites",
  "Electric Shock"
];

const faqs = [
  {
    question: "When should I bring my child to the emergency room?",
    answer: "Seek emergency care for difficulty breathing, high fever in infants under 3 months, severe allergic reactions, head injuries with loss of consciousness, seizures, severe bleeding, signs of dehydration, poisoning, or any condition where your child appears very ill or unresponsive."
  },
  {
    question: "What should I bring to the emergency room?",
    answer: "Bring your child's health card, vaccination records, list of current medications, any relevant medical history, and if poisoning is suspected, bring the container or substance. Also bring comfort items like a favorite toy to help calm your child."
  },
  {
    question: "How is the emergency department different for children?",
    answer: "Our pediatric emergency department is specifically designed for children with child-sized equipment, child-friendly environment, and staff specially trained in pediatric emergencies. We understand children's unique medical needs and emotional responses."
  },
  {
    question: "What happens when we arrive at the emergency room?",
    answer: "Upon arrival, a triage nurse will quickly assess your child's condition and assign a priority level. Critical cases are seen immediately. You'll then be taken to an examination room where the emergency pediatrician will evaluate and treat your child."
  },
  {
    question: "Can I stay with my child during treatment?",
    answer: "Yes, parents are encouraged to stay with their child throughout most emergency procedures. Your presence provides comfort and helps medical staff gather important information. In rare cases during certain procedures, we may ask you to step out briefly."
  },
  {
    question: "What if my child needs to be admitted after emergency care?",
    answer: "If your child requires admission, our emergency team will coordinate with the appropriate department (pediatric ward, PICU, or NICU) for seamless transfer. We ensure continuity of care and keep you informed throughout the process."
  }
];

const benefits = [
  "18+ years emergency expertise",
  "UK-trained pediatric specialist",
  "24/7 doctor availability",
  "Advanced life support ready",
  "Child-friendly environment",
  "Rapid triage system"
];
---

<Layout
  title="Pediatric Emergency Care in Bangalore | Dr. Sanjay D Swamy"
  description="24/7 Pediatric Emergency Care in Bangalore by Dr. Sanjay D Swamy. Expert emergency treatment for children - trauma, poisoning, seizures, respiratory distress. Immediate care when your child needs it most."
>
  <!-- Hero Section -->
  <section class="hero" style={`background-image: linear-gradient(rgba(10, 94, 176, 0.3), rgba(10, 94, 176, 0.25)), url('${heroBgImage.src}'); background-position: center; background-size: cover;`}>
    <div class="container">
      <div class="hero-grid">
        <div class="hero-content">
          <p class="overline">24/7 EMERGENCY CARE</p>
          <h1>Pediatric <span style="color: white;">Emergency Care</span></h1>
          <p class="hero-desc">Expert pediatric emergency services for critically ill and injured children. With 18+ years of experience and UK training, Dr. Sanjay D Swamy provides immediate, life-saving care when your child needs it most.</p>
          <div class="hero-stats">
            <div class="stat">
              <span class="stat-num">24/7</span>
              <span class="stat-label">Always Available</span>
            </div>
            <div class="stat">
              <span class="stat-num">&lt;5min</span>
              <span class="stat-label">Response Time</span>
            </div>
            <div class="stat">
              <span class="stat-num">10K+</span>
              <span class="stat-label">Emergencies Handled</span>
            </div>
          </div>
          <div class="hero-actions">
            <a href="tel:+919999999999" class="btn btn-hero-primary">Emergency: Call Now</a>
            <a href="#appointment" class="btn btn-hero-outline">Get Directions</a>
          </div>
        </div>
        <div class="hero-image">
          <div class="image-frame"></div>
          <img src={emergencyImg.src} alt="Pediatric Emergency Care in Bangalore" loading="eager">
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats Section -->
  <section class="quick-stats-section">
    <div class="container">
      <div class="quick-stats-grid">
        <div class="quick-stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
          </div>
          <div class="stat-content">
            <h3>Immediate Response</h3>
            <p>Critical cases seen within minutes</p>
          </div>
        </div>
        <div class="quick-stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 8v8"/><path d="M8 12h8"/></svg>
          </div>
          <div class="stat-content">
            <h3>Advanced Life Support</h3>
            <p>Pediatric resuscitation expertise</p>
          </div>
        </div>
        <div class="quick-stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          </div>
          <div class="stat-content">
            <h3>Specialist On-Call</h3>
            <p>Pediatric intensivist available 24/7</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Service Section -->
  <section class="section about-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title-block">
          <p class="section-overline">ABOUT EMERGENCY CARE</p>
          <h2 class="section-title">When Every <span class="highlight">Second Counts</span></h2>
        </div>
        <div class="section-subtitle-block">
          <p class="section-subtitle">Our pediatric emergency department is designed specifically for children, with specialized equipment, trained staff, and a child-friendly environment to provide the best possible care during emergencies.</p>
        </div>
      </div>
      <div class="about-content">
        <div class="about-text">
          <p>Pediatric emergencies require specialized knowledge and equipment. Children are not small adults - they have unique physiological responses, different medication dosages, and special emotional needs during medical crises. Our emergency department is designed specifically for pediatric care.</p>
          <p>Led by Dr. Sanjay D Swamy, a UK-trained pediatric intensivist with 18+ years of experience, our emergency team includes pediatric specialists, trained nurses, and support staff available around the clock. We use child-sized equipment, age-appropriate pain management, and create a calming environment.</p>
          <p>Our rapid triage system ensures critical cases receive immediate attention. We coordinate seamlessly with PICU and NICU when intensive care is needed, providing continuity of care from emergency to recovery.</p>
        </div>
        <div class="benefits-card">
          <h3>Why Choose Our Emergency Care</h3>
          <ul class="benefits-list">
            {benefits.map(benefit => (
              <li>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="section services-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title-block">
          <p class="section-overline">OUR CAPABILITIES</p>
          <h2 class="section-title">Comprehensive Emergency <span class="highlight">Services</span></h2>
        </div>
        <div class="section-subtitle-block">
          <p class="section-subtitle">Our emergency department offers a full spectrum of pediatric emergency services with advanced monitoring, life support, and specialized treatments.</p>
        </div>
      </div>
      <div class="services-grid">
        {services.map(service => (
          <div class="service-card">
            <div class="service-image">
              <img src={service.image} alt={service.title} />
            </div>
            <div class="service-content">
              <h3>{service.title}</h3>
              <p>{service.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner Strip -->
  <section class="cta-strip">
    <div class="container">
      <div class="cta-strip-content">
        <div class="cta-strip-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
        </div>
        <div class="cta-strip-text">
          <h3>Child Emergency? Call Us Immediately</h3>
          <p>24/7 pediatric emergency care available. Don't wait.</p>
        </div>
        <div class="cta-strip-actions">
          <a href="tel:+919999999999" class="btn btn-cta-strip">Call Now</a>
          <a href="/contact" class="btn btn-cta-strip-outline">Get Directions</a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Doctor Section -->
  <section class="section about-doctor-section">
    <div class="container">
      <div class="about-doctor-grid">
        <div class="about-doctor-image-wrapper">
          <div class="about-image-frame"></div>
          <div class="about-doctor-image">
            <img src={award2.src} alt="Dr. Sanjay D Swamy - Pediatric Emergency Specialist" width="500" height="600">
          </div>
        </div>
        <div class="about-doctor-content">
          <p class="about-overline">YOUR CHILD'S EMERGENCY SPECIALIST</p>
          <h2 class="about-title">Dr. Sanjay D <span class="about-highlight">Swamy</span></h2>
          <p class="about-desc">
            As the Chief Paediatric Intensivist at Cloud Nine Hospital, Dr. Sanjay D Swamy brings 18+ years of experience in managing pediatric emergencies. His advanced training at Birmingham Children's Hospital, UK, equipped him with expertise in handling the most critical pediatric cases.
          </p>

          <div class="about-stats">
            <div class="stat-box">
              <div class="stat-number">18+</div>
              <div class="stat-label">Years Experience</div>
              <div class="stat-desc">Dedicated career in pediatric emergency and intensive care with thousands of lives saved.</div>
            </div>
            <div class="stat-box">
              <div class="stat-number">UK</div>
              <div class="stat-label">Advanced Training</div>
              <div class="stat-desc">Fellowship at Birmingham Children's Hospital with world-class emergency care practices.</div>
            </div>
          </div>

          <div class="about-actions">
            <a href="/appointment" class="btn btn-primary">Book Consultation</a>
            <a href="/about" class="btn btn-outline">Full Profile</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Advanced Capabilities Section -->
  <section class="section capabilities-section">
    <div class="container">
      <div class="section-header centered">
        <p class="section-overline">ADVANCED CAPABILITIES</p>
        <h2 class="section-title">Emergency <span class="highlight">Facilities</span></h2>
        <p class="section-subtitle centered-subtitle">Our emergency department is equipped with state-of-the-art facilities and specialized equipment for comprehensive pediatric emergency care.</p>
      </div>
      <div class="capabilities-grid">
        {capabilities.map((cap, index) => (
          <div class="capability-card">
            <div class="capability-number" style={`background-color: ${cap.color}`}>{String(index + 1).padStart(2, '0')}</div>
            <h3>{cap.title}</h3>
            <p>{cap.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Conditions Treated Section -->
  <section class="section conditions-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title-block">
          <p class="section-overline">EMERGENCIES WE HANDLE</p>
          <h2 class="section-title">Pediatric <span class="highlight">Emergencies</span></h2>
        </div>
        <div class="section-subtitle-block">
          <p class="section-subtitle">Our team is experienced in managing a wide range of pediatric emergencies requiring immediate medical attention.</p>
        </div>
      </div>
      <div class="conditions-grid">
        {conditions.map(condition => (
          <div class="condition-tag">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
            <span>{condition}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner Strip 2 -->
  <section class="cta-strip cta-strip-alt">
    <div class="container">
      <div class="cta-strip-content">
        <div class="cta-strip-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
        </div>
        <div class="cta-strip-text">
          <h3>Every Minute Counts in an Emergency</h3>
          <p>24/7 pediatric emergency care with rapid response team ready.</p>
        </div>
        <div class="cta-strip-actions">
          <a href="tel:+919999999999" class="btn btn-cta-strip">Call Now</a>
          <a href="/contact" class="btn btn-cta-strip-outline">Get Directions</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials-section">
    <div class="container">
      <div class="testimonials-header">
        <div class="testimonials-title-block">
          <p class="testimonials-overline">TESTIMONIALS</p>
          <h2 class="testimonials-main-title">What families say about <br><span class="testimonials-highlight">Dr. Sanjay D Swamy</span></h2>
        </div>
        <div class="testimonials-statement">
          <p>When your child faces a medical emergency, you need the best care immediately. Our families trust Dr. Swamy's expertise and rapid response during their most critical moments.</p>
        </div>
      </div>

      <div class="testimonials-slider-wrapper">
        <button class="testimonial-nav testimonial-nav-prev" aria-label="Previous testimonials">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="testimonial-nav testimonial-nav-next" aria-label="Next testimonials">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
        <div class="testimonials-cards-grid" id="testimonialsSlider">
          <div class="testimonial-card">
            <div class="testimonial-stars">⭐ ⭐ ⭐ ⭐ ⭐</div>
            <p class="testimonial-quote">"Saved my son's life at 2 AM"</p>
            <p class="testimonial-text">When my son had a severe asthma attack at 2 AM, the emergency team responded instantly. Their quick action and expertise saved his life. Forever grateful to Dr. Sanjay.</p>
            <div class="testimonial-author">
              <div class="author-avatar">P</div>
              <span class="author-name">Priya S.</span>
            </div>
          </div>

          <div class="testimonial-card">
            <div class="testimonial-stars">⭐ ⭐ ⭐ ⭐ ⭐</div>
            <p class="testimonial-quote">"Calm during crisis"</p>
            <p class="testimonial-text">My daughter accidentally swallowed medication. The poison control response was immediate. The team's calm demeanor helped us stay calm too during a terrifying situation.</p>
            <div class="testimonial-author">
              <div class="author-avatar">R</div>
              <span class="author-name">Rajesh K.</span>
            </div>
          </div>

          <div class="testimonial-card">
            <div class="testimonial-stars">⭐ ⭐ ⭐ ⭐ ⭐</div>
            <p class="testimonial-quote">"Thorough and caring"</p>
            <p class="testimonial-text">After my son's head injury from a fall, the emergency team's thorough evaluation and monitoring gave us peace of mind. They explained everything clearly and followed up.</p>
            <div class="testimonial-author">
              <div class="author-avatar">A</div>
              <span class="author-name">Anjali P.</span>
            </div>
          </div>

          <div class="testimonial-card">
            <div class="testimonial-stars">⭐ ⭐ ⭐ ⭐ ⭐</div>
            <p class="testimonial-quote">"Best emergency care"</p>
            <p class="testimonial-text">Dr. Swamy's team handled my daughter's febrile seizure with such expertise. From the moment we arrived, they took control and kept us informed throughout.</p>
            <div class="testimonial-author">
              <div class="author-avatar">V</div>
              <span class="author-name">Vijay M.</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section faq-section">
    <div class="container">
      <div class="faq-layout">
        <div class="faq-content">
          <p class="section-overline">FREQUENTLY ASKED QUESTIONS</p>
          <h2 class="faq-title">Questions About <span class="highlight">Emergency Care</span></h2>
          <div class="faq-accordion">
            {faqs.map((faq, index) => (
              <details class="faq-item">
                <summary class="faq-question">
                  <span>{faq.question}</span>
                  <span class="faq-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <line x1="12" y1="5" x2="12" y2="19"></line>
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                  </span>
                </summary>
                <div class="faq-answer">
                  <p>{faq.answer}</p>
                </div>
              </details>
            ))}
          </div>
        </div>
        <div class="faq-image">
          <img src={emergencyImg.src} alt="Emergency Care at Cloud Nine Hospital" />
        </div>
      </div>
    </div>
  </section>

  <!-- Appointment Form Section -->
  <section class="section appointment-section" id="appointment">
    <div class="container">
      <div class="appointment-grid">
        <div class="appointment-info">
          <p class="section-overline">EMERGENCY CONTACT</p>
          <h2 class="section-title">Get <span class="title-highlight">Immediate Help</span></h2>
          <p class="section-desc">For emergencies, call our helpline immediately. For non-urgent queries, fill out the form and our team will respond promptly.</p>

          <div class="contact-info-list">
            <div class="contact-info-item emergency-highlight">
              <div class="info-icon emergency-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              </div>
              <div class="info-text">
                <h4>Emergency Helpline</h4>
                <p><a href="tel:+919999999999">+91 99999 99999</a> (24/7)</p>
              </div>
            </div>
            <div class="contact-info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
              </div>
              <div class="info-text">
                <h4>Location</h4>
                <p>Cloud Nine Hospital, Jayanagar, Bangalore - 560041</p>
              </div>
            </div>
            <div class="contact-info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
              </div>
              <div class="info-text">
                <h4>Emergency Hours</h4>
                <p>24/7 - Always Open</p>
              </div>
            </div>
          </div>

