---
import Layout from '../../layouts/Layout.astro';
import heroBgTexture from '../../assets/backgrounds/hero-texture.png';
import heroBgImage from '../../assets/backgrounds/background-sanjay.jpeg';
import generalPediatricsImg from '../../assets/services/general-pediatrics.png';
import wellChildImg from '../../assets/services/well-child-visit.png';
import growthImg from '../../assets/services/growth-monitoring.png';
import developmentImg from '../../assets/services/developmental-screening.png';
import nutritionImg from '../../assets/services/nutrition-counseling.png';
import acuteIllnessImg from '../../assets/services/acute-illness.png';
import chronicDiseaseImg from '../../assets/services/chronic-disease.png';
import award1 from '../../assets/awards/sanjay-award-1.jpeg';
import award2 from '../../assets/awards/sanjay-award-2.jpeg';
import award3 from '../../assets/awards/sanja-award-2.jpeg';
import award4 from '../../assets/awards/sanjay-award-4.jpeg';
import award5 from '../../assets/awards/sanjay-swami-5.jpeg';
import award6 from '../../assets/awards/sanjay-swami-6.jpeg';
import AppointmentForm from '../../components/AppointmentForm.astro';

// SEO-optimized service data
const services = [
  {
    image: wellChildImg.src,
    title: "Well-Child Visits & Wellness Exams",
    description: "Comprehensive preventive health assessments following IAP (Indian Academy of Pediatrics) guidelines to monitor your child's growth, development, and overall wellbeing at every stage."
  },
  {
    image: growthImg.src,
    title: "Growth & Development Monitoring",
    description: "Track your child's physical and cognitive development including height, weight, head circumference, and developmental milestones against standard growth charts."
  },
  {
    image: developmentImg.src,
    title: "Developmental Screening",
    description: "Early detection and assessment of developmental delays in cognitive, motor, language, and social-emotional areas to ensure timely intervention when needed."
  },
  {
    image: nutritionImg.src,
    title: "Nutrition & Diet Counseling",
    description: "Personalized dietary guidance to support healthy eating habits, address feeding issues, manage childhood obesity, and ensure optimal nutrition for growing children."
  },
  {
    image: acuteIllnessImg.src,
    title: "Acute Illness Care",
    description: "Expert diagnosis and treatment for common childhood illnesses including fever, cough, cold, ear infections, throat infections, stomach ailments, and skin conditions."
  },
  {
    image: chronicDiseaseImg.src,
    title: "Chronic Disease Management",
    description: "Ongoing care and comprehensive management for asthma, allergies, eczema, recurrent infections, and other chronic pediatric conditions with personalized treatment plans."
  }
];

const ageGroups = [
  {
    age: "Newborn",
    range: "0-28 days",
    description: "Initial health screening, feeding support, jaundice monitoring, and newborn care guidance for new parents.",
    color: "#0A5EB0"
  },
  {
    age: "Infant",
    range: "1-12 months",
    description: "Growth monitoring, vaccination schedules, milestone tracking, feeding transitions, and early development assessment.",
    color: "#0A97B0"
  },
  {
    age: "Toddler",
    range: "1-3 years",
    description: "Speech development, behavioral guidance, nutrition counseling, potty training support, and social skill development.",
    color: "#0A5EB0"
  },
  {
    age: "Preschool",
    range: "3-5 years",
    description: "School readiness assessment, vision/hearing screening, immunization updates, and addressing common childhood concerns.",
    color: "#0A97B0"
  },
  {
    age: "School Age",
    range: "6-12 years",
    description: "Academic performance concerns, sports fitness, puberty preparation, mental health awareness, and chronic condition management.",
    color: "#0A5EB0"
  },
  {
    age: "Adolescent",
    range: "13-18 years",
    description: "Teen health issues, growth spurts, emotional wellbeing, lifestyle counseling, and transition to adult healthcare.",
    color: "#0A97B0"
  }
];

const conditions = [
  "Fever & Infections",
  "Cold, Cough & Flu",
  "Ear Infections (Otitis Media)",
  "Throat Infections & Tonsillitis",
  "Asthma & Wheezing",
  "Allergies & Eczema",
  "Diarrhea & Vomiting",
  "Constipation",
  "Urinary Tract Infections",
  "Skin Rashes & Infections",
  "Growth Disorders",
  "Nutritional Deficiencies",
  "Behavioral Issues",
  "Sleep Problems",
  "ADHD Screening",
  "Developmental Delays"
];

const process = [
  {
    step: "01",
    title: "Book Appointment",
    description: "Schedule a convenient time slot online or call our clinic. Same-day appointments available for sick visits."
  },
  {
    step: "02",
    title: "Initial Assessment",
    description: "Comprehensive evaluation of your child's health history, current concerns, growth measurements, and vital signs."
  },
  {
    step: "03",
    title: "Detailed Examination",
    description: "Thorough physical examination and age-appropriate developmental screening by our experienced pediatrician."
  },
  {
    step: "04",
    title: "Diagnosis & Treatment",
    description: "Clear explanation of findings, personalized treatment plan, prescriptions if needed, and follow-up guidance."
  }
];

const faqs = [
  {
    question: "How often should I bring my child for a wellness checkup?",
    answer: "We recommend wellness visits as per the IAP schedule: At birth, then at 2, 4, 6, 9, 12, 15, and 18 months for infants. After that, annual checkups are recommended for children above 2 years. Children with specific health concerns may need more frequent visits."
  },
  {
    question: "What age group does Dr. Sanjay Swamy treat?",
    answer: "We provide comprehensive pediatric care for children from birth (including newborns) through 18 years of age. This includes infants, toddlers, preschoolers, school-age children, and adolescents."
  },
  {
    question: "What should I bring to my child's first appointment?",
    answer: "Please bring previous medical records, vaccination history, birth certificate, list of current medications, insurance documents, and any specific questions or concerns you'd like to discuss. For newborns, bring hospital discharge summary."
  },
  {
    question: "Do you offer same-day sick visits for children?",
    answer: "Yes, we understand children can fall ill unexpectedly. We prioritize same-day appointments for sick children with fever, infections, or other acute conditions. Call our clinic early for same-day availability."
  },
  {
    question: "What vaccinations do you provide?",
    answer: "We provide all vaccinations as per the IAP immunization schedule including BCG, Hepatitis B, DTP, Polio, Hib, PCV, Rotavirus, MMR, Varicella, Typhoid, Hepatitis A, and annual flu vaccines. We also offer optional vaccines like HPV."
  },
  {
    question: "How do I know if my child's growth is normal?",
    answer: "During every visit, we measure height, weight, and head circumference (for infants) and plot them on standardized growth charts. We compare with previous measurements to ensure consistent growth. Any concerns are discussed and investigated promptly."
  }
];

const benefits = [
  "18+ years of pediatric expertise",
  "UK-trained specialist",
  "Child-friendly environment",
  "Evidence-based treatment",
  "Same-day sick visits",
  "Comprehensive care 0-18 years"
];
---

<Layout
  title="General Pediatrics in Bangalore | Child Specialist - Dr. Sanjay D Swamy"
  description="Expert general pediatric care in Bangalore by Dr. Sanjay D Swamy. Comprehensive child healthcare including wellness exams, vaccinations, growth monitoring, sick visits for children 0-18 years. Book appointment today."
>
  <!-- Hero Section -->
  <section class="hero" style={`background-image: linear-gradient(rgba(10, 94, 176, 0.3), rgba(10, 94, 176, 0.25)), url('${heroBgImage.src}'); background-position: center; background-size: cover;`}>
    <div class="container">
      <div class="hero-grid">
        <div class="hero-content">
          <p class="overline">COMPREHENSIVE CHILD HEALTHCARE</p>
          <h1>General <span style="color: white;" class="">Pediatrics</span></h1>
          <p class="hero-desc">Expert pediatric care for your child from birth through adolescence. With 18+ years of experience and UK training, Dr. Sanjay D Swamy provides compassionate, evidence-based healthcare in a child-friendly environment.</p>
          <div class="hero-stats">
            <div class="stat">
              <span class="stat-num">18+</span>
              <span class="stat-label">Years Experience</span>
            </div>
            <div class="stat">
              <span class="stat-num">0-18</span>
              <span class="stat-label">Years Age Group</span>
            </div>
            <div class="stat">
              <span class="stat-num">IAP</span>
              <span class="stat-label">Guidelines Followed</span>
            </div>
          </div>
          <div class="hero-actions">
            <a href="/appointment" class="btn btn-hero-primary">Book Appointment</a>
            <a href="tel:+919999999999" class="btn btn-hero-outline">Call Now</a>
          </div>
        </div>
        <div class="hero-image">
          <div class="image-frame"></div>
          <img src={generalPediatricsImg.src} alt="General Pediatrics - Child Healthcare in Bangalore" loading="eager">
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats Section -->
  <section class="quick-stats-section">
    <div class="container">
      <div class="quick-stats-grid">
        <div class="quick-stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
          </div>
          <div class="stat-content">
            <h3>Comprehensive Care</h3>
            <p>Complete child healthcare from newborn to 18 years</p>
          </div>
        </div>
        <div class="quick-stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
          </div>
          <div class="stat-content">
            <h3>Same-Day Visits</h3>
            <p>Priority appointments for sick children</p>
          </div>
        </div>
        <div class="quick-stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          </div>
          <div class="stat-content">
            <h3>IAP Guidelines</h3>
            <p>Following latest pediatric care protocols</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Service Section -->
  <section class="section about-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title-block">
          <p class="section-overline">ABOUT THE SERVICE</p>
          <h2 class="section-title">Your Partner in Your <span class="highlight">Child's Health Journey</span></h2>
        </div>
        <div class="section-subtitle-block">
          <p class="section-subtitle">General pediatrics covers all aspects of child healthcare, from preventive care and routine checkups to diagnosing and treating common childhood illnesses. Our goal is to ensure your child grows healthy and happy.</p>
        </div>
      </div>
      <div class="about-content">
        <div class="about-text">
          <p>At our clinic, every child receives personalized care tailored to their unique needs. Dr. Sanjay D Swamy combines his 18+ years of pediatric expertise with international training from the UK to provide the highest standard of care.</p>
          <p>We believe in building lasting relationships with families, guiding parents through every stage of their child's development. From the first newborn visit to adolescent health counseling, we're committed to being your trusted healthcare partner.</p>
          <p>Our child-friendly environment is designed to make visits comfortable and stress-free. We take time to listen to parents' concerns, explain conditions clearly, and ensure you leave with confidence in your child's care plan.</p>
        </div>
        <div class="benefits-card">
          <h3>Why Parents Choose Us</h3>
          <ul class="benefits-list">
            {benefits.map(benefit => (
              <li>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="section services-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title-block">
          <p class="section-overline">OUR SERVICES</p>
          <h2 class="section-title">Comprehensive Pediatric <span class="highlight">Services</span></h2>
        </div>
        <div class="section-subtitle-block">
          <p class="section-subtitle">From routine wellness exams to managing complex conditions, we offer a full range of pediatric services to support your child's health at every stage.</p>
        </div>
      </div>
      <div class="services-grid">
        {services.map(service => (
          <div class="service-card">
            <div class="service-image">
              <img src={service.image} alt={service.title} />
            </div>
            <div class="service-content">
              <h3>{service.title}</h3>
              <p>{service.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner Strip -->
  <section class="cta-strip">
    <div class="container">
      <div class="cta-strip-content">
        <div class="cta-strip-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
        </div>
        <div class="cta-strip-text">
          <h3>Concerned About Your Child's Health?</h3>
          <p>Schedule a consultation with Dr. Sanjay D Swamy today.</p>
        </div>
        <div class="cta-strip-actions">
          <a href="/contact" class="btn btn-cta-strip">Book Appointment</a>
          <a href="tel:+919999999999" class="btn btn-cta-strip-outline">Call Now</a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Doctor Section from Home -->
  <section class="section about-doctor-section">
    <div class="container">
      <div class="about-doctor-grid">
        <div class="about-doctor-image-wrapper">
          <div class="about-image-frame"></div>
          <div class="about-doctor-image">
            <img src={award2.src} alt="Dr. Sanjay D Swamy" width="500" height="600">
          </div>
        </div>
        <div class="about-doctor-content">
          <p class="about-overline">ABOUT DR. SWAMY</p>
          <h2 class="about-title">Professional <span class="about-highlight">Summary</span></h2>
          <p class="about-desc">
            Dr. Sanjay D Swamy is the Chief Paediatric Intensivist at Cloud Nine Hospital, Jayanagar, Bangalore. With 18 years of specialist experience in Paediatric Intensive Care, advanced critical care techniques, and international training. Specialized in treating critically ill neonates and children through dedicated fellowship training with extensive hands-on experience in complex paediatric procedures.
          </p>
          
          <div class="about-stats">
            <div class="stat-box">
              <div class="stat-number">18</div>
              <div class="stat-label">Years of Specialist Experience</div>
              <div class="stat-desc">Extensive expertise in PICU and critical care has positively impacted thousands of children and families.</div>
            </div>
            <div class="stat-box">
              <div class="stat-number">7</div>
              <div class="stat-label">Leading Institutions</div>
              <div class="stat-desc">Trained and worked across prestigious hospitals in India and UK including Birmingham Children's Hospital.</div>
            </div>
          </div>
          
          <div class="about-actions">
            <a href="/appointment" class="btn btn-primary">Book an Appointment</a>
            <a href="/about" class="btn btn-outline">More About Me</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Age Groups Section -->
  <section class="section age-section">
    <div class="container">
      <div class="section-header centered">
        <p class="section-overline">AGE-APPROPRIATE CARE</p>
        <h2 class="section-title">Specialized Care for <span class="highlight">Every Age</span></h2>
        <p class="section-subtitle centered-subtitle">Children have different healthcare needs at different ages. We provide age-appropriate care tailored to each developmental stage.</p>
      </div>
      <div class="age-timeline">
        <div class="timeline-line"></div>
        {ageGroups.map((group, index) => (
          <div class="age-timeline-item">
            <div class="timeline-node" style={`background-color: ${group.color}`}>
              <span class="node-number">{String(index + 1).padStart(2, '0')}</span>
            </div>
            <div class="age-content">
              <div class="age-badge" style={`background-color: ${group.color}`}>
                {group.range}
              </div>
              <h3>{group.age}</h3>
              <p>{group.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Conditions Treated Section -->
  <section class="section conditions-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title-block">
          <p class="section-overline">CONDITIONS WE TREAT</p>
          <h2 class="section-title">Common Childhood <span class="highlight">Conditions</span></h2>
        </div>
        <div class="section-subtitle-block">
          <p class="section-subtitle">Expert diagnosis and treatment for a wide range of pediatric conditions. If your child is experiencing any health concern, we're here to help.</p>
        </div>
      </div>
      <div class="conditions-grid">
        {conditions.map(condition => (
          <div class="condition-tag">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
            <span>{condition}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner Strip 2 -->
  <section class="cta-strip cta-strip-alt">
    <div class="container">
      <div class="cta-strip-content">
        <div class="cta-strip-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
        </div>
        <div class="cta-strip-text">
          <h3>Same-Day Sick Visits Available</h3>
          <p>Priority appointments for unwell children. Don't wait, call us now.</p>
        </div>
        <div class="cta-strip-actions">
          <a href="/contact" class="btn btn-cta-strip">Book Now</a>
          <a href="tel:+919999999999" class="btn btn-cta-strip-outline">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            Call Now
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <!-- <section class="section process-section">
    <div class="container">
      <div class="section-header centered">
        <p class="section-overline">HOW IT WORKS</p>
        <h2 class="section-title">Your Child's Visit <span class="highlight">Experience</span></h2>
        <p class="section-subtitle centered-subtitle">We've designed our process to be simple, efficient, and stress-free for both children and parents.</p>
      </div>
      <div class="process-grid">
        {process.map(item => (
          <div class="process-card">
            <div class="process-step">{item.step}</div>
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section> -->

  <!-- Testimonials -->
  <section class="testimonials-section">
    <div class="container">
      <div class="testimonials-header">
        <div class="testimonials-title-block">
          <p class="testimonials-overline">TESTIMONIALS</p>
          <h2 class="testimonials-main-title">What our great patients say <br>about <span class="testimonials-highlight">Dr. Sanjay D Swamy</span></h2>
        </div>
        <div class="testimonials-statement">
          <p>Committed to maintaining the highest standards in pediatric intensive care. Professional certifications reflect years of training, continued education, and dedication to providing safe, evidence-based treatment.</p>
        </div>
      </div>

      <div class="testimonials-slider-wrapper">
        <button class="testimonial-nav testimonial-nav-prev" aria-label="Previous testimonials">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="testimonial-nav testimonial-nav-next" aria-label="Next testimonials">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
        <div class="testimonials-cards-grid" id="testimonialsSlider">
        <div class="testimonial-card">
          <div class="testimonial-stars">
            ⭐ ⭐ ⭐ ⭐ ⭐
          </div>
          <p class="testimonial-quote">"Exceptional care and expertise"</p>
          <p class="testimonial-text">Dr. Swamy's expertise in pediatric intensive care gave us confidence during our child's critical condition. His compassionate approach and clear communication made a difficult time more manageable.</p>
          <div class="testimonial-author">
            <div class="author-avatar">P</div>
            <span class="author-name">Priya K.</span>
          </div>
        </div>

        <div class="testimonial-card">
          <div class="testimonial-stars">
            ⭐ ⭐ ⭐ ⭐ ⭐
          </div>
          <p class="testimonial-quote">"Highly skilled and caring"</p>
          <p class="testimonial-text">We are grateful for Dr. Swamy's dedication and expertise. His international training and experience truly show in the quality of care he provides. Our baby received the best possible treatment.</p>
          <div class="testimonial-author">
            <div class="author-avatar">R</div>
            <span class="author-name">Rajesh M.</span>
          </div>
        </div>

        <div class="testimonial-card">
          <div class="testimonial-stars">
            ⭐ ⭐ ⭐ ⭐ ⭐
          </div>
          <p class="testimonial-quote">"Outstanding pediatric specialist"</p>
          <p class="testimonial-text">Dr. Swamy's years of experience in PICU made all the difference for our son. He took time to explain everything clearly and ensured we were comfortable with every decision.</p>
          <div class="testimonial-author">
            <div class="author-avatar">S</div>
            <span class="author-name">Sneha R.</span>
          </div>
        </div>

        <div class="testimonial-card">
          <div class="testimonial-stars">
            ⭐ ⭐ ⭐ ⭐ ⭐
          </div>
          <p class="testimonial-quote">"Trusted and professional"</p>
          <p class="testimonial-text">The level of care and attention our daughter received was exceptional. Dr. Swamy's UK training and expertise in critical care gave us peace of mind during a stressful time.</p>
          <div class="testimonial-author">
            <div class="author-avatar">A</div>
            <span class="author-name">Arun S.</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section faq-section">
    <div class="container">
      <div class="faq-layout">
        <div class="faq-content">
          <p class="section-overline">FREQUENTLY ASKED QUESTIONS</p>
          <h2 class="faq-title">Got Questions? We Have <span class="highlight">Answers</span></h2>
