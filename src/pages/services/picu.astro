---
import Layout from '../../layouts/Layout.astro';
import heroBgImage from '../../assets/backgrounds/background-sanjay.jpeg';
import picuImg from '../../assets/services/picu.png';
import award2 from '../../assets/awards/sanjay-award-2.jpeg';
import AppointmentForm from '../../components/AppointmentForm.astro';

import emergencyImg from '../../assets/services/emergency-care.png';
import nicuMonitoringImg from '../../assets/services/nicu-monitoring.png';
import nicuRespiratoryImg from '../../assets/services/nicu-respiratory-support.png';
import nicuInfectionImg from '../../assets/services/nicu-infection-management.png';
import nicuPrematureImg from '../../assets/services/nicu-premature-care.png';

const services = [
  {
    image: nicuMonitoringImg.src,
    title: "24/7 Critical Care Monitoring",
    description: "Round-the-clock intensive monitoring with advanced equipment and dedicated nursing staff for critically ill children requiring constant observation."
  },
  {
    image: nicuRespiratoryImg.src,
    title: "Advanced Respiratory Support",
    description: "State-of-the-art ventilator management including conventional and high-frequency oscillatory ventilation for respiratory failure and ARDS."
  },
  {
    image: emergencyImg.src,
    title: "Hemodynamic Management",
    description: "Expert management of shock, cardiac dysfunction, and circulatory support with advanced invasive and non-invasive monitoring techniques."
  },
  {
    image: nicuInfectionImg.src,
    title: "Sepsis & Infection Management",
    description: "Rapid identification and aggressive treatment of severe infections and septic shock with evidence-based protocols and antimicrobial stewardship."
  },
  {
    image: picuImg.src,
    title: "Neurological Critical Care",
    description: "Specialized care for children with severe neurological conditions including traumatic brain injury, status epilepticus, and encephalopathy."
  },
  {
    image: nicuPrematureImg.src,
    title: "Post-Surgical ICU Care",
    description: "Comprehensive post-operative care for children following major surgeries including cardiac, neurosurgical, and complex abdominal procedures."
  }
];

const capabilities = [
  {
    title: "ECMO Support",
    description: "Extracorporeal membrane oxygenation for life-threatening cardiac and respiratory failure.",
    color: "#0A5EB0"
  },
  {
    title: "Renal Replacement",
    description: "Continuous renal replacement therapy (CRRT) and hemodialysis for acute kidney injury.",
    color: "#0A97B0"
  },
  {
    title: "Plasma Exchange",
    description: "Therapeutic plasma exchange for autoimmune conditions and toxin removal.",
    color: "#0A5EB0"
  },
  {
    title: "Advanced Airway",
    description: "Expert airway management including difficult intubations and tracheostomy care.",
    color: "#0A97B0"
  }
];

const conditions = [
  "Respiratory Failure & ARDS",
  "Septic Shock",
  "Severe Pneumonia",
  "Status Epilepticus",
  "Traumatic Brain Injury",
  "Cardiac Failure",
  "Multi-organ Dysfunction",
  "Severe Dengue",
  "Acute Liver Failure",
  "Diabetic Ketoacidosis",
  "Poisoning & Overdose",
  "Post-Surgical Complications",
  "Severe Asthma",
  "Meningitis & Encephalitis",
  "Severe Dehydration",
  "Burns & Trauma"
];

const faqs = [
  {
    question: "When does a child need PICU admission?",
    answer: "Children need PICU admission when they have life-threatening conditions requiring intensive monitoring and intervention. This includes severe breathing difficulty, shock, altered consciousness, multi-organ failure, post-major surgery, or any condition requiring mechanical ventilation or continuous medication infusions."
  },
  {
    question: "Can parents stay with their child in the PICU?",
    answer: "Yes, we encourage family presence in the PICU as it benefits the child's recovery. Parents are allowed to visit during designated hours and can stay overnight in specific cases. Our team keeps families informed with regular updates and family meetings."
  },
  {
    question: "What equipment is used in the PICU?",
    answer: "Our PICU is equipped with advanced ventilators, cardiac monitors, infusion pumps, ECMO machines, dialysis equipment, and continuous monitoring systems. Each bed has dedicated monitors, and we use the latest technology for non-invasive monitoring."
  },
  {
    question: "How long do children typically stay in the PICU?",
    answer: "PICU stay varies based on the condition and response to treatment. Some children may need just 24-48 hours for stabilization, while complex cases may require weeks. Our goal is to stabilize the child and transfer to regular care as soon as safely possible."
  },
  {
    question: "What is Dr. Swamy's experience in PICU?",
    answer: "Dr. Sanjay D Swamy is a Chief Paediatric Intensivist with 18+ years of specialist experience in PICU. He received advanced training at Birmingham Children's Hospital, UK, and has managed thousands of critically ill children."
  },
  {
    question: "How do you manage pain in critically ill children?",
    answer: "We use a multimodal approach to pain management with age-appropriate pain assessment tools. Our protocols include both pharmacological methods and non-pharmacological comfort measures, prioritizing comfort while minimizing side effects."
  }
];

const benefits = [
  "18+ years PICU expertise",
  "UK-trained intensivist",
  "24/7 specialist availability",
  "Advanced ECMO capability",
  "State-of-the-art equipment",
  "Family-centered care approach"
];
---

<Layout
  title="Pediatric Intensive Care (PICU) in Bangalore | Dr. Sanjay D Swamy"
  description="Expert Pediatric Intensive Care Unit (PICU) services in Bangalore by Dr. Sanjay D Swamy. 18+ years experience in critical care, ECMO, ventilator management. 24/7 intensive care for critically ill children."
>
  <!-- Hero Section -->
  <section class="hero" style={`background-image: linear-gradient(rgba(10, 94, 176, 0.3), rgba(10, 94, 176, 0.25)), url('${heroBgImage.src}'); background-position: center; background-size: cover;`}>
    <div class="container">
      <div class="hero-grid">
        <div class="hero-content">
          <p class="overline">CRITICAL CARE EXCELLENCE</p>
          <h1>Pediatric <span style="color: white;">Intensive Care</span></h1>
          <p class="hero-desc">Expert pediatric intensive care for critically ill children. With 18+ years of PICU experience and UK training from Birmingham Children's Hospital, Dr. Sanjay D Swamy provides world-class critical care with advanced life support capabilities.</p>
          <div class="hero-stats">
            <div class="stat">
              <span class="stat-num">18+</span>
              <span class="stat-label">Years PICU Experience</span>
            </div>
            <div class="stat">
              <span class="stat-num">24/7</span>
              <span class="stat-label">Critical Care</span>
            </div>
            <div class="stat">
              <span class="stat-num">ECMO</span>
              <span class="stat-label">Certified</span>
            </div>
          </div>
          <div class="hero-actions">
            <a href="/appointment" class="btn btn-hero-primary">Book Consultation</a>
            <a href="tel:+919999999999" class="btn btn-hero-outline">Emergency: Call Now</a>
          </div>
        </div>
        <div class="hero-image">
          <div class="image-frame"></div>
          <img src={picuImg.src} alt="Pediatric Intensive Care Unit - PICU in Bangalore" loading="eager">
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats Section -->
  <section class="quick-stats-section">
    <div class="container">
      <div class="quick-stats-grid">
        <div class="quick-stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
          </div>
          <div class="stat-content">
            <h3>24/7 Intensivist Care</h3>
            <p>Round-the-clock specialist supervision</p>
          </div>
        </div>
        <div class="quick-stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 8v8"/><path d="M8 12h8"/></svg>
          </div>
          <div class="stat-content">
            <h3>Advanced Life Support</h3>
            <p>ECMO & ventilator expertise</p>
          </div>
        </div>
        <div class="quick-stat-card">
          <div class="stat-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          </div>
          <div class="stat-content">
            <h3>UK-Trained Expertise</h3>
            <p>Birmingham Children's Hospital</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Service Section -->
  <section class="section about-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title-block">
          <p class="section-overline">ABOUT PICU</p>
          <h2 class="section-title">Expert Care for <span class="highlight">Critically Ill Children</span></h2>
        </div>
        <div class="section-subtitle-block">
          <p class="section-subtitle">Our Pediatric Intensive Care Unit provides the highest level of medical care for children with life-threatening conditions. We combine advanced technology with compassionate, family-centered care.</p>
        </div>
      </div>
      <div class="about-content">
        <div class="about-text">
          <p>The PICU at Cloud Nine Hospital is led by Dr. Sanjay D Swamy, a Chief Paediatric Intensivist with specialized training from Birmingham Children's Hospital, UK. Our unit is equipped to handle the most complex pediatric emergencies with state-of-the-art monitoring and life support systems.</p>
          <p>We specialize in managing respiratory failure, septic shock, multi-organ dysfunction, and post-operative care for complex surgeries. Our team is trained in advanced techniques including ECMO for cases where conventional treatment is insufficient.</p>
          <p>Understanding that a child's critical illness affects the entire family, we practice family-centered care with open communication, regular updates, and emotional support. Our goal is not just survival, but optimal recovery with minimal long-term complications.</p>
        </div>
        <div class="benefits-card">
          <h3>Why Choose Our PICU</h3>
          <ul class="benefits-list">
            {benefits.map(benefit => (
              <li>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="section services-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title-block">
          <p class="section-overline">OUR CAPABILITIES</p>
          <h2 class="section-title">Comprehensive Critical <span class="highlight">Care Services</span></h2>
        </div>
        <div class="section-subtitle-block">
          <p class="section-subtitle">Our PICU offers a full spectrum of intensive care services with advanced monitoring, life support, and specialized treatments for pediatric critical illness.</p>
        </div>
      </div>
      <div class="services-grid">
        {services.map(service => (
          <div class="service-card">
            <div class="service-image">
              <img src={service.image} alt={service.title} />
            </div>
            <div class="service-content">
              <h3>{service.title}</h3>
              <p>{service.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner Strip -->
  <section class="cta-strip">
    <div class="container">
      <div class="cta-strip-content">
        <div class="cta-strip-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
        </div>
        <div class="cta-strip-text">
          <h3>Need Critical Care for Your Child?</h3>
          <p>Consult with our PICU specialist Dr. Sanjay D Swamy.</p>
        </div>
        <div class="cta-strip-actions">
          <a href="/contact" class="btn btn-cta-strip">Book Consultation</a>
          <a href="tel:+919999999999" class="btn btn-cta-strip-outline">Emergency Call</a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Doctor Section -->
  <section class="section about-doctor-section">
    <div class="container">
      <div class="about-doctor-grid">
        <div class="about-doctor-image-wrapper">
          <div class="about-image-frame"></div>
          <div class="about-doctor-image">
            <img src={award2.src} alt="Dr. Sanjay D Swamy - PICU Specialist" width="500" height="600">
          </div>
        </div>
        <div class="about-doctor-content">
          <p class="about-overline">YOUR CHILD'S INTENSIVIST</p>
          <h2 class="about-title">Dr. Sanjay D <span class="about-highlight">Swamy</span></h2>
          <p class="about-desc">
            As the Chief Paediatric Intensivist at Cloud Nine Hospital, Dr. Sanjay D Swamy brings 18+ years of dedicated PICU experience. His advanced training at Birmingham Children's Hospital, UK, equipped him with expertise in managing the most complex pediatric critical care cases.
          </p>

          <div class="about-stats">
            <div class="stat-box">
              <div class="stat-number">18+</div>
              <div class="stat-label">Years in PICU</div>
              <div class="stat-desc">Dedicated career in pediatric intensive care with thousands of critically ill children treated.</div>
            </div>
            <div class="stat-box">
              <div class="stat-number">UK</div>
              <div class="stat-label">Advanced Training</div>
              <div class="stat-desc">Fellowship at Birmingham Children's Hospital with world-class critical care practices.</div>
            </div>
          </div>

          <div class="about-actions">
            <a href="/appointment" class="btn btn-primary">Book Consultation</a>
            <a href="/about" class="btn btn-outline">Full Profile</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Advanced Capabilities Section -->
  <section class="section capabilities-section">
    <div class="container">
      <div class="section-header centered">
        <p class="section-overline">ADVANCED CAPABILITIES</p>
        <h2 class="section-title">Specialized <span class="highlight">Treatments</span></h2>
        <p class="section-subtitle centered-subtitle">Our PICU is equipped with advanced life support technologies and specialized treatments for the most critical pediatric conditions.</p>
      </div>
      <div class="capabilities-grid">
        {capabilities.map((cap, index) => (
          <div class="capability-card">
            <div class="capability-number" style={`background-color: ${cap.color}`}>{String(index + 1).padStart(2, '0')}</div>
            <h3>{cap.title}</h3>
            <p>{cap.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Conditions Treated Section -->
  <section class="section conditions-section">
    <div class="container">
      <div class="section-header">
        <div class="section-title-block">
          <p class="section-overline">CONDITIONS WE TREAT</p>
          <h2 class="section-title">Critical <span class="highlight">Conditions</span></h2>
        </div>
        <div class="section-subtitle-block">
          <p class="section-subtitle">Our PICU team is experienced in managing a wide range of life-threatening pediatric conditions requiring intensive care support.</p>
        </div>
      </div>
      <div class="conditions-grid">
        {conditions.map(condition => (
          <div class="condition-tag">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
            <span>{condition}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner Strip 2 -->
  <section class="cta-strip cta-strip-alt">
    <div class="container">
      <div class="cta-strip-content">
        <div class="cta-strip-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
        </div>
        <div class="cta-strip-text">
          <h3>24/7 PICU Specialist Available</h3>
          <p>Expert pediatric intensive care when your child needs it most.</p>
        </div>
        <div class="cta-strip-actions">
          <a href="/contact" class="btn btn-cta-strip">Book Now</a>
          <a href="tel:+919999999999" class="btn btn-cta-strip-outline">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            Emergency Call
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials-section">
    <div class="container">
      <div class="testimonials-header">
        <div class="testimonials-title-block">
          <p class="testimonials-overline">TESTIMONIALS</p>
          <h2 class="testimonials-main-title">What families say about <br><span class="testimonials-highlight">Dr. Sanjay D Swamy</span></h2>
        </div>
        <div class="testimonials-statement">
          <p>When your child needs critical care, you want the best. Our families trust Dr. Swamy's expertise and compassionate approach during their most challenging times.</p>
        </div>
      </div>

      <div class="testimonials-slider-wrapper">
        <button class="testimonial-nav testimonial-nav-prev" aria-label="Previous testimonials">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="testimonial-nav testimonial-nav-next" aria-label="Next testimonials">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
        <div class="testimonials-cards-grid" id="testimonialsSlider">
          <div class="testimonial-card">
            <div class="testimonial-stars">⭐ ⭐ ⭐ ⭐ ⭐</div>
            <p class="testimonial-quote">"He saved our daughter's life"</p>
            <p class="testimonial-text">Our daughter was admitted with severe respiratory failure. Dr. Swamy's quick decision to start advanced ventilation and his constant monitoring saved her life.</p>
            <div class="testimonial-author">
              <div class="author-avatar">M</div>
              <span class="author-name">Meera S.</span>
            </div>
          </div>

          <div class="testimonial-card">
            <div class="testimonial-stars">⭐ ⭐ ⭐ ⭐ ⭐</div>
            <p class="testimonial-quote">"Expert care during crisis"</p>
            <p class="testimonial-text">When our son went into septic shock, Dr. Swamy was there within minutes. His expertise and calm demeanor gave us hope during the darkest hours.</p>
            <div class="testimonial-author">
              <div class="author-avatar">K</div>
              <span class="author-name">Karthik R.</span>
            </div>
          </div>

          <div class="testimonial-card">
            <div class="testimonial-stars">⭐ ⭐ ⭐ ⭐ ⭐</div>
            <p class="testimonial-quote">"World-class PICU care"</p>
            <p class="testimonial-text">Dr. Swamy's UK training really shows. The level of care, attention to detail, and communication is exceptional. Our baby recovered fully.</p>
            <div class="testimonial-author">
              <div class="author-avatar">N</div>
              <span class="author-name">Neha P.</span>
            </div>
          </div>

          <div class="testimonial-card">
            <div class="testimonial-stars">⭐ ⭐ ⭐ ⭐ ⭐</div>
            <p class="testimonial-quote">"Compassionate intensivist"</p>
            <p class="testimonial-text">What sets Dr. Swamy apart is his compassion. He took time to explain everything and treated our child like his own. Highly recommend.</p>
            <div class="testimonial-author">
              <div class="author-avatar">V</div>
              <span class="author-name">Vijay M.</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section faq-section">
    <div class="container">
      <div class="faq-layout">
        <div class="faq-content">
          <p class="section-overline">FREQUENTLY ASKED QUESTIONS</p>
          <h2 class="faq-title">Questions About <span class="highlight">PICU Care</span></h2>
          <div class="faq-accordion">
            {faqs.map((faq, index) => (
              <details class="faq-item">
                <summary class="faq-question">
                  <span>{faq.question}</span>
                  <span class="faq-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <line x1="12" y1="5" x2="12" y2="19"></line>
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                  </span>
                </summary>
                <div class="faq-answer">
                  <p>{faq.answer}</p>
                </div>
              </details>
            ))}
          </div>
        </div>
        <div class="faq-image">
          <img src={picuImg.src} alt="PICU Care at Cloud Nine Hospital" />
        </div>
      </div>
    </div>
  </section>

  <!-- Appointment Form Section -->
  <section class="section appointment-section">
    <div class="container">
      <div class="appointment-grid">
        <div class="appointment-info">
          <p class="section-overline">BOOK APPOINTMENT</p>
          <h2 class="section-title">Schedule Your <span class="title-highlight">Consultation</span></h2>
          <p class="section-desc">Fill out the form and our team will confirm your appointment slot via phone or WhatsApp.</p>

          <div class="contact-info-list">
            <div class="contact-info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
              </div>
              <div class="info-text">
                <h4>Location</h4>
                <p>Cloud Nine Hospital, Jayanagar, Bangalore - 560041</p>
              </div>
            </div>
            <div class="contact-info-item">
              <div class="info-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              </div>
              <div class="info-text">
                <h4>Emergency</h4>
                <p><a href="tel:+919999999999">+91 99999 99999</a> (24/7)</p>
              </div>
            </div>
