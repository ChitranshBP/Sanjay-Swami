---
import Layout from '../layouts/Layout.astro';
import AppointmentForm from '../components/AppointmentForm.astro';
---

<Layout 
  title="Contact Us" 
  description="Get in touch with Dr. Sanjay Swamy. Clinic address, phone number, location map, and appointment booking."
>
  <div class="page-header">
    <div class="container">
      <h1>Contact Us</h1>
      <p>We are here to help. Reach out to us for appointments and queries.</p>
    </div>
  </div>

  <section class="section">
    <div class="container contact-grid">
      <div class="contact-info">
        <h2>Get In Touch</h2>
        <div class="info-item">
          <h3>üìç Clinic Location</h3>
          <p>123 Health Avenue, Layout,</p>
          <p>Bangalore, Karnataka 560001</p>
        </div>
        
        <div class="info-item">
          <h3>üìû Phone</h3>
          <p><a href="tel:+919999999999">+91 99999 99999</a></p>
        </div>
        
        <div class="info-item">
          <h3>‚úâÔ∏è Email</h3>
          <p><a href="mailto:contact@drsanjayswamy.com">contact@drsanjayswamy.com</a></p>
        </div>

        <div class="info-item">
          <h3>üïí Consultation Hours</h3>
          <p>Mon - Sat: 10:00 AM - 1:00 PM</p>
          <p>Mon - Sat: 5:00 PM - 8:30 PM (Evening)</p>
          <p>Sun: Closed</p>
        </div>

        <div class="map-container">
          <!-- Embedding a placeholder map or Google Maps iframe -->
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3887.989063236028!2d77.5945627!3d12.9715987!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae1670c9b44e6d%3A0xf8dfc3e8517e4fe0!2sBengaluru%2C%20Karnataka!5e0!3m2!1sen!2sin!4v1633000000000!5m2!1sen!2sin" 
            width="100%" 
            height="300" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy">
          </iframe>
        </div>
      </div>

      <div class="appointment-section">
        <h2>Book an Appointment</h2>
        <p class="mb-4">Fill out the form below and we will confirm your slot.</p>
        <AppointmentForm />
      </div>
    </div>
  </section>

</Layout>

<style>
  .page-header { background-color: var(--color-primary-dark); color: white; padding: 3rem 0; text-align: center; }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
  }

  .info-item {
    margin-bottom: 2rem;
  }

  .info-item h3 { font-size: 1.1rem; color: var(--color-text-light); margin-bottom: 0.5rem; }
  .info-item p { font-size: 1.1rem; font-weight: 500; }
  
  .map-container {
    margin-top: 2rem;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }

  .appointment-section {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: var(--radius-md);
  }

  .mb-4 { margin-bottom: 1.5rem; }

  @media (min-width: 768px) {
    .contact-grid { grid-template-columns: 1fr 1fr; }
  }
</style>
