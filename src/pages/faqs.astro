<script>
  // Tab switching functionality
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll<HTMLElement>('.faq-tab');
    const panels = document.querySelectorAll<HTMLElement>('.faq-panel');
    const rows = document.querySelectorAll<HTMLElement>('.faq-row');

    // Tab click handler
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const tabId = tab.dataset.tab;

        // Update tabs
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');

        // Update panels
        panels.forEach(panel => {
          if (panel.dataset.panel === tabId) {
            panel.classList.add('active');
          } else {
            panel.classList.remove('active');
          }
        });

        // Collapse all rows in new panel
        const activePanelRows = document.querySelectorAll('.faq-panel.active .faq-row');
        activePanelRows.forEach(row => row.classList.remove('expanded'));
      });
    });

    // Row click handler for expand/collapse
    rows.forEach(row => {
      row.addEventListener('click', () => {
        const isExpanded = row.classList.contains('expanded');

        // Collapse all rows in the same panel
        const panel = row.closest('.faq-panel');
        if (panel) {
          panel.querySelectorAll('.faq-row').forEach(r => r.classList.remove('expanded'));
        }

        // Toggle current row
        if (!isExpanded) {
          row.classList.add('expanded');
        }
      });
    });
  });
</script>
