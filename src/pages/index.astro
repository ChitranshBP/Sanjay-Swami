  }

  .why-choose-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.1);
  }

  .why-icon {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #0A5EB0;
  }

  .why-content h3 {
    font-size: 1.1rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .why-content p {
