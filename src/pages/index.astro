  }

  .service-item-card h3 {
    font-size: 1.3rem;
    color: var(--color-text);
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .service-item-card p {
    font-size: 0.95rem;
    color: var(--color-text-light);
    line-height: 1.6;
