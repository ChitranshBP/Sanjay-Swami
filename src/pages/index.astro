---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TestimonialsSlider from '../components/TestimonialsSlider.astro';
import CTA from '../components/CTA.astro';
import doctorImage from '../assets/doctor/sanjay-swami-hero.png';
import generalPediatricsImg from '../assets/services/general-pediatrics.png';
import nicuImg from '../assets/services/nicu.png';
import picuImg from '../assets/services/picu.png';
import vaccinationsImg from '../assets/services/vaccinations.png';
import emergencyImg from '../assets/services/emergency-care.png';
import award1 from '../assets/awards/sanjay-award-1.jpeg';
import award2 from '../assets/awards/sanjay-award-2.jpeg';
import award3 from '../assets/awards/sanja-award-2.jpeg';
import award4 from '../assets/awards/sanjay-award-4.jpeg';
import award5 from '../assets/awards/sanjay-swami-5.jpeg';
import award6 from '../assets/awards/sanjay-swami-6.jpeg';
import awardFinal from '../assets/awards/sanjay-swami-award-final.jpeg';
import heroBgTexture from '../assets/backgrounds/hero-texture.png';
import heroBg from '../assets/backgrounds/Kushal Sanjay swami banner upscaled.png';
import heroMobileImg from '../assets/doctor/sanjay-swami-lecture-new.jpg';
import ctaImage from '../assets/cta/consultation.png';

const services = [
  { title: "General Pediatrics", description: "Comprehensive care for your child's health and development from birth to adolescence.", href: "/services/general-pediatrics", image: generalPediatricsImg.src },
  { title: "Neonatal Care (NICU)", description: "Specialized care for newborns requiring intensive medical attention.", href: "/services/nicu", image: nicuImg.src },
  { title: "Pediatric Intensive Care", description: "Advanced critical care for children with severe illnesses or injuries.", href: "/services/picu", image: picuImg.src },
  { title: "Vaccinations", description: "Safe and timely immunizations to protect your child from preventable diseases.", href: "/services/vaccinations", image: vaccinationsImg.src }
];
---

<Layout
  title="Home"
  description="Dr. Sanjay D Swamy - Chief Paediatric Intensivist at Cloud Nine Hospital, Jayanagar, Bangalore. 18 years specialist experience in PICU and critical care."
>
  
  <!-- Hero Section (Desktop) -->
  <section class="hero hero-desktop">
    <img src={heroBg.src} alt="" class="hero-bg-img" />
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <div class="hero-text">
        <p class="hero-subtitle">CHIEF PAEDIATRIC INTENSIVIST</p>
        <h1>Choose to take care of <em>your little ones' health!</em></h1>
        <p class="hero-intro">Expert pediatric intensive care with 18 years of specialist experience, advanced critical care techniques, and international training - all dedicated to your child's health and wellbeing.</p>
        <div class="hero-btns">
          <a href="/contact" class="btn btn-hero-primary">Book Appointment</a>
          <a href="tel:+919999999999" class="btn btn-hero-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            Contact Us
          </a>
        </div>
      </div>
      <div class="hero-spacer"></div>
    </div>
  </section>

  <!-- Hero Section (Mobile) -->
  <section class="hero-mobile">
    <div class="hero-mobile-card">
      <div class="hero-mobile-img-wrapper">
        <img src={heroMobileImg.src} alt="Dr. Sanjay Swamy" class="hero-mobile-img" />
      </div>
      <div class="hero-mobile-content">
        <p class="hero-subtitle">CHIEF PAEDIATRIC INTENSIVIST</p>
        <h1>Choose to take care of <em>your little ones' health!</em></h1>
        <p class="hero-intro">Expert pediatric intensive care with 18 years of specialist experience, advanced critical care techniques, and international training - all dedicated to your child's health and wellbeing.</p>
        <div class="hero-btns">
          <a href="/contact" class="btn btn-hero-primary">Book Appointment</a>
          <a href="tel:+919999999999" class="btn btn-hero-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="why-choose-section">
    <div class="container">
      <div class="why-choose-grid">
        <div class="why-choose-card">
          <div class="why-icon">
            <svg viewBox="0 0 24 24" width="40" height="40" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4 21V18.5C4 15.4624 6.46243 13 9.5 13H13.5M8 21V18M16 6.5C16 8.70914 14.2091 10.5 12 10.5C9.79086 10.5 8 8.70914 8 6.5C8 4.29086 9.79086 2.5 12 2.5C14.2091 2.5 16 4.29086 16 6.5ZM17.5 12.9998C17.0439 12.3927 16.3178 12 15.5 12C14.1193 12 13 13.1193 13 14.5C13 15.1195 13.2253 15.6864 13.5985 16.1231L17.5 21L21.4015 16.1231C21.7747 15.6864 22 15.1195 22 14.5C22 13.1193 20.8807 12 19.5 12C18.6822 12 17.9561 12.3927 17.5 12.9998Z" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.4"/>
            </svg>
          </div>
          <div class="why-content">
            <h3>Expert Intensive Care</h3>
            <p>18+ years specialized PICU experience with UK training.</p>
          </div>
        </div>

        <div class="why-choose-card">
          <div class="why-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
          </div>
          <div class="why-content">
            <h3>Personalized Approach</h3>
            <p>Tailored treatment with compassionate family care.</p>
          </div>
        </div>

        <div class="why-choose-card">
          <div class="why-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
          </div>
          <div class="why-content">
            <h3>Advanced Technology</h3>
            <p>State-of-the-art PICU with latest equipment.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Section (Previously Removed, placeholder for spacing if needed) --\u003e
  
  <!-- Services Section -->
  <section class="section services-section">
    <div class="container">
      <div class="services-header">
        <div class="services-title-block">
          <p class="services-overline">COMPREHENSIVE PEDIATRIC CARE</p>
          <h2 class="services-title">Specialized <span class="services-highlight">Healthcare Services</span> for Children</h2>
        </div>
        <div class="services-subtitle-block">
          <p class="services-subtitle">Expert medical care tailored to your child's unique needs, from routine checkups to specialized intensive care treatment.</p>
        </div>
      </div>
      
      <div class="services-new-grid">
        <a href="/services/general-pediatrics" class="service-item-card">
          <img src={generalPediatricsImg.src} alt="General Pediatrics">
          <div class="service-overlay">
            <h3>General Pediatrics</h3>
            <div class="service-hover-content">
              <p>Comprehensive care for your child's health and development from birth to adolescence, including wellness checkups and preventive care.</p>
              <span class="service-link">Read more →</span>
            </div>
          </div>
        </a>

        <a href="/services/picu" class="service-item-card">
          <img src={picuImg.src} alt="Pediatric Intensive Care">
          <div class="service-overlay">
            <h3>Pediatric Intensive Care</h3>
            <div class="service-hover-content">
              <p>Advanced critical care for children with severe illnesses or injuries, utilizing state-of-the-art PICU facilities and international protocols.</p>
              <span class="service-link">Read more →</span>
            </div>
          </div>
        </a>

        <a href="/services/nicu" class="service-item-card">
          <img src={nicuImg.src} alt="Neonatal Care">
          <div class="service-overlay">
            <h3>Neonatal Care (NICU)</h3>
            <div class="service-hover-content">
              <p>Specialized care for newborns requiring intensive medical attention, with expertise in treating premature babies and critical neonatal conditions.</p>
              <span class="service-link">Read more →</span>
            </div>
          </div>
        </a>

        <a href="/services/vaccinations" class="service-item-card">
          <img src={vaccinationsImg.src} alt="Vaccinations">
          <div class="service-overlay">
            <h3>Vaccinations</h3>
            <div class="service-hover-content">
              <p>Safe and timely immunizations to protect your child from preventable diseases, following the latest IAP vaccination schedule recommendations.</p>
              <span class="service-link">Read more →</span>
            </div>
          </div>
        </a>

        <a href="/services/emergency" class="service-item-card">
          <img src={emergencyImg.src} alt="Emergency Care">
          <div class="service-overlay">
            <h3>Emergency Care</h3>
            <div class="service-hover-content">
              <p>24/7 emergency pediatric care for urgent medical situations, ensuring immediate attention and expert treatment when your child needs it most.</p>
              <span class="service-link">Read more →</span>
            </div>
          </div>
        </a>

        <div class="service-cta-card">
          <h3>Schedule a consultation appointment today</h3>
          <p>Expert pediatric care is just a call away. Book your appointment and give your child the healthcare they deserve.</p>
          <a href="/contact" class="btn btn-cta">Book an Appointment</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->

  <!-- CTA Banner Strip -->
  <section class="cta-strip">
    <div class="container">
      <div class="cta-strip-content">
        <div class="cta-strip-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
        </div>
        <div class="cta-strip-text">
          <h3>Need Expert Pediatric Care?</h3>
          <p>Schedule a consultation with Dr. Sanjay D Swamy today.</p>
        </div>
        <div class="cta-strip-actions">
          <a href="/contact" class="btn btn-cta-strip">Book Appointment</a>
          <a href="tel:+919999999999" class="btn btn-cta-strip-outline">Call Now</a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Doctor Section -->
  <section class="section about-doctor-section">
    <div class="container">
      <div class="about-doctor-grid">
        <div class="about-doctor-image-wrapper">
          <div class="about-image-frame"></div>
          <div class="about-doctor-image">
            <img src={award2.src} alt="Dr. Sanjay D Swamy" width="500" height="600">
          </div>
        </div>
        <div class="about-doctor-content">
          <p class="about-overline">ABOUT DR. SWAMY</p>
          <h2 class="about-title">Professional <span class="about-highlight">Summary</span></h2>
          <p class="about-desc">
            Dr. Sanjay D Swamy is the Chief Paediatric Intensivist at Cloud Nine Hospital, Jayanagar, Bangalore. With 18 years of specialist experience in Paediatric Intensive Care, advanced critical care techniques, and international training. Specialized in treating critically ill neonates and children through dedicated fellowship training with extensive hands-on experience in complex paediatric procedures.
          </p>
          
          <div class="about-stats">
            <div class="stat-box">
              <div class="stat-number">18</div>
              <div class="stat-label">Years of Specialist Experience</div>
              <div class="stat-desc">Extensive expertise in PICU and critical care has positively impacted thousands of children and families.</div>
            </div>
            <div class="stat-box">
              <div class="stat-number">7</div>
              <div class="stat-label">Leading Institutions</div>
              <div class="stat-desc">Trained and worked across prestigious hospitals in India and UK including Birmingham Children's Hospital.</div>
            </div>
          </div>
          
          <div class="about-actions">
            <a href="/appointment" class="btn btn-primary">Book an Appointment</a>
            <a href="/about" class="btn btn-outline">More About Me</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Awards & Recognition Section -->
  <section class="awards-section">
    <div class="container">
      <div class="awards-header">
        <div class="awards-title-block">
          <p class="awards-overline">AWARDS & RECOGNITION</p>
          <h2 class="awards-title">Honoring Excellence in <span class="awards-highlight">Pediatric Care</span></h2>
        </div>
        <div class="awards-subtitle-block">
          <p class="awards-subtitle">Recognized for outstanding contributions to pediatric intensive care medicine and dedication to improving child healthcare outcomes.</p>
        </div>
      </div>

      <div class="awards-slider-wrapper">
        <button class="awards-nav awards-nav-prev" aria-label="Previous awards">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="awards-nav awards-nav-next" aria-label="Next awards">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>

        <div class="awards-slider" id="awardsSlider">
          <div class="award-card">
            <img src={award1.src} alt="Dr. Sanjay Swamy receiving award">
          </div>
        
          <div class="award-card">
            <img src={award3.src} alt="Dr. Sanjay Swamy recognition">
          </div>
          <div class="award-card">
            <img src={award4.src} alt="Dr. Sanjay Swamy award">
          </div>
          <div class="award-card">
            <img src={award5.src} alt="Dr. Sanjay Swamy achievement">
          </div>
            <div class="award-card">
            <img src={award2.src} alt="Dr. Sanjay Swamy at award ceremony">
          </div>
          <div class="award-card">
            <img src={award6.src} alt="Dr. Sanjay Swamy excellence award">
          </div>
          <div class="award-card">
            <img src={awardFinal.src} alt="Dr. Sanjay Swamy award">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Banner Strip 2 -->
  <section class="cta-strip cta-strip-alt">
    <div class="container">
      <div class="cta-strip-content">
        <div class="cta-strip-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
        </div>
        <div class="cta-strip-text">
          <h3>Same-Day Appointments Available</h3>
          <p>Don't wait — get your child the care they need today.</p>
        </div>
        <div class="cta-strip-actions">
          <a href="/contact" class="btn btn-cta-strip">Book Now</a>
          <a href="tel:+919999999999" class="btn btn-cta-strip-outline">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            Call Now
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials-section">
    <div class="container">
      <div class="testimonials-header">
        <div class="testimonials-title-block">
          <p class="testimonials-overline">TESTIMONIALS</p>
          <h2 class="testimonials-main-title">What our great patients say <br>about <span class="testimonials-highlight">Dr. Sanjay D Swamy</span></h2>
        </div>
        <div class="testimonials-statement">
          <p>Committed to maintaining the highest standards in pediatric intensive care. Professional certifications reflect years of training, continued education, and dedication to providing safe, evidence-based treatment.</p>
        </div>
      </div>

      <div class="testimonials-slider-wrapper">
        <button class="testimonial-nav testimonial-nav-prev" aria-label="Previous testimonials">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="testimonial-nav testimonial-nav-next" aria-label="Next testimonials">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
        <div class="testimonials-cards-grid" id="testimonialsSlider">
        <div class="testimonial-card">
          <div class="testimonial-stars">
            ⭐ ⭐ ⭐ ⭐ ⭐
          </div>
          <p class="testimonial-quote">"Exceptional care and expertise"</p>
          <p class="testimonial-text">Dr. Swamy's expertise in pediatric intensive care gave us confidence during our child's critical condition. His compassionate approach and clear communication made a difficult time more manageable.</p>
          <div class="testimonial-author">
            <div class="author-avatar">P</div>
            <span class="author-name">Priya K.</span>
          </div>
        </div>

        <div class="testimonial-card">
          <div class="testimonial-stars">
            ⭐ ⭐ ⭐ ⭐ ⭐
          </div>
          <p class="testimonial-quote">"Highly skilled and caring"</p>
          <p class="testimonial-text">We are grateful for Dr. Swamy's dedication and expertise. His international training and experience truly show in the quality of care he provides. Our baby received the best possible treatment.</p>
          <div class="testimonial-author">
            <div class="author-avatar">R</div>
            <span class="author-name">Rajesh M.</span>
          </div>
        </div>

        <div class="testimonial-card">
          <div class="testimonial-stars">
            ⭐ ⭐ ⭐ ⭐ ⭐
          </div>
          <p class="testimonial-quote">"Outstanding pediatric specialist"</p>
          <p class="testimonial-text">Dr. Swamy's years of experience in PICU made all the difference for our son. He took time to explain everything clearly and ensured we were comfortable with every decision.</p>
          <div class="testimonial-author">
            <div class="author-avatar">S</div>
            <span class="author-name">Sneha R.</span>
          </div>
        </div>

        <div class="testimonial-card">
          <div class="testimonial-stars">
            ⭐ ⭐ ⭐ ⭐ ⭐
          </div>
          <p class="testimonial-quote">"Trusted and professional"</p>
          <p class="testimonial-text">The level of care and attention our daughter received was exceptional. Dr. Swamy's UK training and expertise in critical care gave us peace of mind during a stressful time.</p>
          <div class="testimonial-author">
            <div class="author-avatar">A</div>
            <span class="author-name">Arun S.</span>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-container">
      <div class="cta-content">
        <p class="cta-overline">BOOK AN APPOINTMENT</p>
        <h2 class="cta-title">Schedule a consultation appointment today</h2>
        <p class="cta-description">Expert pediatric intensive care is just a call away. Get personalized treatment plans and compassionate care for your child's health needs.</p>
        <a href="/appointment" class="btn btn-cta-primary">Book an Appointment</a>
      </div>
      <div class="cta-image">
        <img src={ctaImage.src} alt="Doctor consultation" width="800" height="600">
      </div>
    </div>
  </section>


</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slider = document.getElementById('testimonialsSlider');
    const prevBtn = document.querySelector('.testimonial-nav-prev');
    const nextBtn = document.querySelector('.testimonial-nav-next');

    if (slider && prevBtn && nextBtn) {
      prevBtn.addEventListener('click', () => {
        const scrollAmount = slider.clientWidth * 0.8;
        slider.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
      });

      nextBtn.addEventListener('click', () => {
        const scrollAmount = slider.clientWidth * 0.8;
        slider.scrollBy({ left: scrollAmount, behavior: 'smooth' });
      });
    }

    // Awards Slider
    const awardsSlider = document.getElementById('awardsSlider');
    const awardsPrevBtn = document.querySelector('.awards-nav-prev');
    const awardsNextBtn = document.querySelector('.awards-nav-next');

    if (awardsSlider && awardsPrevBtn && awardsNextBtn) {
      awardsPrevBtn.addEventListener('click', () => {
        const scrollAmount = awardsSlider.clientWidth * 0.6;
        awardsSlider.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
      });

      awardsNextBtn.addEventListener('click', () => {
        const scrollAmount = awardsSlider.clientWidth * 0.6;
        awardsSlider.scrollBy({ left: scrollAmount, behavior: 'smooth' });
      });
    }
  });
</script>

<style>
  /* Mobile hero hidden on desktop, desktop hero hidden on mobile */
  .hero-mobile {
    display: none;
  }

  .hero {
    position: relative;
    color: white;
    overflow: hidden;
    min-height: 600px;
    display: flex;
    align-items: center;
    background: #0A5EB0;
  }

  .hero-bg-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top right;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      rgba(10, 94, 176, 0.85) 0%,
      rgba(10, 94, 176, 0.6) 35%,
      rgba(10, 94, 176, 0.15) 55%,
      transparent 65%
    );
    z-index: 1;
  }

