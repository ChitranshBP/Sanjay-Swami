    width: 100%;
    max-width: 450px;
    height: auto;
    max-height: 650px;
    object-fit: cover;
    object-position: top center;
  }

  .bg-light {
    background-color: #f8f9fa;
  }

  /* Why Choose Us Section */
  .why-choose-section {
    background: #E3F2FD;
    padding: 2.5rem 0;
  }

  .why-choose-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .why-choose-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
