  }

  .service-link:hover {
    color: #023830;
  }

  .service-cta-card {
    background: linear-gradient(135deg, #0A5EB0 0%, #0A97B0 100%);
    padding: 2.5rem 2rem;
    border-radius: 8px;
    text-align: center;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .service-cta-card::before,
